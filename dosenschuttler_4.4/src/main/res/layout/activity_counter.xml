<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Counter">

    <TextView android:text="@string/s_Shaked" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/l_Shaked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s_startButton"
        android:id="@+id/b_startTest"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="StartTest" />

    <TextView
        android:text="@string/s_Counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/l_Count"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/l_Shaked" />

</RelativeLayout>


